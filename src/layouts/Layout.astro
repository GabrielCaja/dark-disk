---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter, fade, slide } from "astro:transitions";
---

<!doctype html>
<html lang="en" data-theme="cupcake">
  <head>
    <ClientRouter />
    <meta charset="UTF-8" /><meta
      name="viewport"
      content="width=device-width"
    /><link rel="icon" type="image/svg+xml" href="/favicon.svg" /><meta
      name="generator"
      content={Astro.generator}
    /><title>AstroGym</title></head
  >

  <body>
    <Navbar />
    <slot transition:animate={slide({ duration: "0.4s" })} />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
